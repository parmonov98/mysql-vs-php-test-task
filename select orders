#1-option
SELECT
    o.order_id,
    o.order_status,
    oi.quantity
FROM
    `orders` AS o
LEFT JOIN order_items AS oi
ON
    oi.order_id = o.order_id
WHERE
    (
        oi.product_id = 7345 AND oi.product_id = 1234
    ) AND o.order_status = 2;

#2-option
SELECT
    o.order_id,
    o.order_status,
    oi.quantity
FROM
    `orders` AS o
LEFT JOIN order_items AS oi
ON
    oi.order_id = o.order_id
WHERE
    (
        SELECT product_id  FROM order_items WHERE product_id = 7345 AND product_id = 1234
    ) AND o.order_status = 2;